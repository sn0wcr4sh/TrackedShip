<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.sn0wcr4sh.trackedship.MainActivity"
    android:padding="16dp"
    android:orientation="horizontal"
    android:columnCount="2">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewLabel"
        android:text="@string/wifi_state"/>
    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:id="@+id/tvWifiState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewValue"
        android:text="@string/wifi_on"/>

    <TextView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewLabel"
        android:text="@string/group_info"/>
    <TextView
        android:id="@+id/tvNetworkName"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewValue"
        android:text="Network name: -"/>
    <TextView
        android:id="@+id/tvDeviceAddress"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextViewValue"
        android:text="Device address: -"/>

    <Button
        android:id="@+id/btRecreateGroup"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/recreate_group"
        android:onClick="onCreateGroupClick"/>
</GridLayout>
